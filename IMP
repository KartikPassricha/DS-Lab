#include <iostream>
using namespace std;

struct node {
    int data;
    node *ptr;
};
void display(node* start)
{
    node *temp=start;
    while(temp!=nullptr)
    {
        cout<<temp->data;
        temp=temp->ptr;
    }
    
}

int main() {
    char ch;
    node *start = nullptr, *current = nullptr;

    do {
        node *n = new node;
        cin >> ch;
        cin >> n->data;
        n->ptr = nullptr;

        if (start == nullptr) {
            start = n;
            current = n;
        } else {
            current->ptr = n;
            current = n;
        }
    } while (ch == 'a');

    display(start);
    node *temp,*temp1;
